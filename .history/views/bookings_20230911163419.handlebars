
<form >

<h1 class="title is-2" >Bookings</h1>

   <div class="notification is-danger is-light">
    {{#if messages.error}}
    <button class="delete"></button>
    {{messages.error}}
    {{/if}}
</div>
<div class="notification is-success is-light">
    {{#if messages.success}}
    <button class="delete"></button>
    {{messages.success}}
    {{/if}}
</div>

    <form action="/searchUserBookings" method="GET">
    <div class="field">
        <label class="label" for="username">Bookings for</label>
        <input class="input is-normal is-2" type="text" name="username" placeholder="enter username">
    </div>
    <div class="field">
        <input class="button is-info" type="submit" value="Search">
    </div>
</form>

<table class="table is-fullwidth">
    <tr>
        <th>Table name</th>
        <th>Table capacity</th>
        <th>Booking size</th>
        <th>Booked by</th>
        <th>Contact number</th>
        <th></th>
    </tr>
    {{#each tables}}
    <tr>
        <td>{{this.table_name}}</td>
        <td>{{this.capacity}}</td>
        <td>{{this.number_of_people}}</td>
        <td>{{this.username}}</td>
        <td>{{this.contact_number}}</td>
        <td>
            <form action="/cancel" method="post">
                <input type="hidden" name="tableName" value="{{this.table_name}}">
                <button class="button is-warning" type="submit">Cancel booking</button>
            </form>
        </td>
    </tr>
    {{/each}}
</table>

</form>
